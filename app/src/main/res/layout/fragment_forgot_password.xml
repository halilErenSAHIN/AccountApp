<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.LoginFragment">

    <ImageView
        android:id="@+id/imghexagon2"
        android:layout_width="140dp"
        android:layout_height="212dp"
        android:layout_gravity="end"
        android:src="@drawable/hexagone1"
        android:contentDescription="Todo" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:contentDescription="Todo"
        android:scaleType="fitXY"
        android:src="@drawable/hexagone2" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="48dp"
        android:layout_marginVertical="96dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shadowColor="@color/black"
            android:text="Email Address"
            android:textColor="#FFFfff"
            android:textSize="18sp"
            tools:ignore="TextContrastCheck" />

        <EditText
            android:id="@+id/forgot_password_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="10"
            android:hint="Your Email Adress:"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:shadowColor="@color/black"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="#80FFFFFF"
            tools:ignore="TextContrastCheck" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <TextView
            android:id="@+id/go_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="Already have an account login"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/go_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="Create an account"
            android:textColor="@color/white" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/btn_remind"
        android:layout_width="40.7dp"
        android:layout_height="45.3dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="27.3dp"
        android:layout_marginBottom="43.7dp"
        android:background="@drawable/white_hexagone">

        <ImageView
            android:layout_width="18.7dp"
            android:layout_height="15.3dp"
            android:layout_gravity="center"
            android:contentDescription="Todo"
            android:src="@drawable/right_arrow"
            tools:ignore="ImageContrastCheck" />


    </FrameLayout>
</FrameLayout>